<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <filter>
        <filter-name>FilterDispatcher</filter-name>
        <filter-class>khanghv.filter.FilterDispatcher</filter-class>
    </filter>
    <filter>
        <filter-name>AuthorizedFilter</filter-name>
        <filter-class>khanghv.filter.AuthorizedFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthorizedFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterDispatcher</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>khanghv.controllers.LoginController</servlet-class>
    </servlet>
