    </servlet>
    <servlet>
        <servlet-name>LoadDetailController</servlet-name>
        <servlet-class>khanghv.controllers.LoadDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>khanghv.controllers.LogoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateController</servlet-name>
        <servlet-class>khanghv.controllers.UpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateCakeController</servlet-name>
        <servlet-class>khanghv.controllers.CreateCakeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddToCartController</servlet-name>
        <servlet-class>khanghv.controllers.AddToCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProductInCartController</servlet-name>
        <servlet-class>khanghv.controllers.DeleteProductInCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateProductInCartController</servlet-name>
        <servlet-class>khanghv.controllers.UpdateProductInCartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>khanghv.controllers.CheckoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrackOrderController</servlet-name>
        <servlet-class>khanghv.controllers.TrackOrderController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/LoginController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadingCakeController</servlet-name>
        <url-pattern>/LoadingCakeController</url-pattern>
